<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <TextView 
        android:id="@+id/commandtextview"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
        android:text="Command: "
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@+id/commandedittext"
        android:layout_marginLeft="4dp"/>

    <EditText
        android:id="@+id/commandedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/commandtextview"
        android:background="@drawable/textbox"
        android:inputType="text"
        android:digits="0123456789,"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@+id/delayedittext"
        android:text="Delay: " 
        android:layout_marginLeft="4dp"/>

    <EditText
        android:id="@+id/delayedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commandedittext"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/commandtextview"
        android:background="@drawable/textbox"
        android:inputType="text"
        android:digits="0123456789,"
        android:textColor="@color/white" />

</RelativeLayout>
